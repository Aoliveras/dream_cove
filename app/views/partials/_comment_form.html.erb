<%= form_for ([@post, @post.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label :user_name, class: "form-control" %>
    <%= f.text_field :user_name, class: "form-control", placeholder: "What should we call you?" %>
  </div>
  <div class="form-group">
    <%= f.label :title, class: "form-control" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "form-control" %>
    <%= f.text_area :body, class: "form-control", placeholder: "Remember to be kind to your community members. Comments are welcome, judgements is not." %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>