<h1>Share your latest dream!</h1>
<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @post.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: "form-control" %>
    <%= f.text_field :title, class: "form-control", placeholder: "What should we call this bad boy?" %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "form-control" %>
    <%= f.text_area :body, class: "form-control", placeholder: "What did you dream about?" %>
  </div>
  <div class="form-group">
    <%= f.label :dream_time, class: "form-control" %>
    <%= f.text_field :dream_time, class: "form-control", placeholder: "Morning, Mid-day or Night" %>
  </div>
  <div class="form-group">
    <%= f.label :dream_type, class: "form-control" %>
    <%= f.text_field :dream_type, class: "form-control", placeholder: "Good, Neutral or Bad" %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>